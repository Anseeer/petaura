<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }
        .reset-container {
            background-color: #FFB743;
            text-align: center;
            padding: 40px;
            width: 500px; /* Increased width */
            animation: float-in 0.5s ease-in-out;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        @keyframes float-in {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        .reset-container h1 {
            font-size: 36px; /* Increased font size */
            color: #444444;
            margin-bottom: 20px;
        }
        .reset-container p {
            font-size: 18px; /* Larger text for description */
            color: #666666;
            margin-bottom: 30px;
        }
        .input-group input {
            border-radius: 25px;
            height: 55px; /* Increased height */
            padding-left: 20px; /* Increased padding */
            font-size: 18px; /* Increased font size */
        }
        .btn-continue {
            background-color: #6e6763;
            color: #ffffff;
            border-radius: 25px;
            padding: 15px 30px; /* Increased padding */
            border: none;
            font-size: 18px; /* Increased font size */
            cursor: pointer;
            margin-top: 25px;
            transition: background-color 0.3s;
        }
        .btn-continue:hover {
            background-color: #d95a17;
        }
        .error {
            font-size: 14px; /* Increased font size */
            color: red;
            margin-top: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="reset-container">
        <h1>Reset Password</h1>
        <p>Enter your email address, and we'll send you an OTP to reset your password.</p>
        <form id="resetForm" onsubmit="forgetPass(event)" >
            <div class="input-group mb-4">
                <input type="email" class="form-control" name="email" id="email" placeholder="Enter your Email">
            </div>
            <div class="error" id="emailError">Please enter a valid email address.</div>
            <button class="btn btn-continue" type="submit">Continue</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        function forgetPass(e){
            e.preventDefault();
            const email = document.getElementById("email").value;
            console.log("Email:",email);
            fetch("/user/forget-pass",{
                method:"POST",
                headers:{
                    'Content-Type':'application/json',
                },
                body:JSON.stringify({email})
            })
            .then((res)=>{
                if(!res.ok){
                    throw new Error 
                }else{
                    res.json();
                }
            })
            .then((res)=>{
                Swal.fire({
                    icon:"success",
                    title:"OTP SENT",
                    showCancelButton:false,
                    showConfirmButton:false,
                    timer:1200,
                })
                window.location.href="/user/loadForgetPassOtp";
            })
            .catch(()=>{
                Swal.fire({
                    icon:"error",
                    title:"Error In OTP SENT",
                    showCancelButton:false,
                    showConfirmButton:false,
                    timer:1200,
                })
            })
        }

        // Email Validation
        const form = document.getElementById('resetForm');
        const emailInput = document.getElementById('email');
        const emailError = document.getElementById('emailError');

        form.addEventListener('submit', (event) => {
            const email = emailInput.value.trim();
            const emailPattern =  /^[a-z0-9._%+-]+@gmail\.com$/;

            if (!emailPattern.test(email)) {
                event.preventDefault(); // Prevent form submission
                emailError.style.display = 'block'; // Show error message
            } else {
                emailError.style.display = 'none'; // Hide error message
            }
        });
    </script>
</body>
</html>
