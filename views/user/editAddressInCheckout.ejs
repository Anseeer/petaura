<link rel="stylesheet" href="/css/user/editAddressCheckout.css">
<div class="floating-container">
  <div class="floating-card">
    <div class="card shadow-lg rounded-lg">
      <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top">
        
        <h5 class="mb-0">Edit Address</h5>
        <button class="close-btn text-white" onclick="closeEditAddress()">&times;</button>
      </div>
      <div class="card-body p-4">
        <form id="editAddressForm" action="/user/edit-addressInCheckout" method="POST">
          <input type="hidden" name="id" value="<%= address._id %>">

          <div class="row">
            <!-- Left Section -->
            <div class="col-md-6 form-group">
              <label for="addressType">Address Type</label>
              <input type="text" class="form-control" id="addressType" name="addressType" value="<%= address.addressType %>" placeholder="Enter Address Type">
              <small id="addressTypeError" class="text-danger"></small>
            </div>

            <div class="col-md-6 form-group">
              <label for="country">Country</label>
              <input type="text" class="form-control" id="country" name="country" value="<%= address.country %>" placeholder="Enter Country">
              <small id="countryError" class="text-danger"></small>
            </div>

            <div class="col-md-6 form-group">
              <label for="pincode">Pincode</label>
              <input type="text" class="form-control" id="pincode" name="pincode" value="<%= address.pincode %>" placeholder="Enter Pincode">
              <small id="pincodeError" class="text-danger"></small>
            </div>

            <!-- Right Section -->
            <div class="col-md-6 form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= address.name %>" placeholder="Enter Name">
              <small id="nameError" class="text-danger"></small>
            </div>

            <div class="col-md-6 form-group">
              <label for="state">State</label>
              <input type="text" class="form-control" id="state" name="state" value="<%= address.state %>" placeholder="Enter State">
              <small id="stateError" class="text-danger"></small>
            </div>

            <div class="col-md-6 form-group">
              <label for="phone">Phone</label>
              <input type="text" class="form-control" id="phone" name="phone" value="<%= address.phone %>" placeholder="Enter Phone">
              <small id="phoneError" class="text-danger"></small>
            </div>
          </div>

          <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Update Address</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/user/editAddressCheckout.js" ></script>