<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function toggleLoading(show) {
    const overlay = document.getElementById('loading-overlay');
    if (show) {
        overlay.style.display = 'flex';
    } else {
        overlay.style.display = 'none';
    }
}
    document.addEventListener("DOMContentLoaded",()=>{
        const footer = document.getElementById('footer');
        footer.style.display="none";
        toggleLoading(true)
        fetchWishlist(1);
    })

    function fetchWishlist(page){
        footer.style.display="none";
        // toggleLoading(true);
        fetch(`/fetchWhishlist?page=${page}`,{
            method:"GET",
            headers:{
                'Content-Type':'application/json'
            }
        })
        .then((res)=> res.json())
        .then((res)=>{
            toggleLoading(false);
            footer.style.display="block";
            if(res.success){
                renderWishlist(res.whishlist,res.currentPage,res.totalPage);
            }else{
                Swal.fire({
                    icon:'error',
                    title:"Faild To Fetch",
                    showCancelButton:false,
                    showConfirmButton:false,
                    timer:1200,
                })
            }
        })
        .catch((err)=>{
            footer.style.display="block";
            toggleLoading(false);
            Swal.fire({
                    icon:'error',
                    title:"Error In Fetch",
                    showCancelButton:false,
                    showConfirmButton:false,
                    timer:1200,
                })
        })
    }

    function renderWishlist(wishlist, currentPage, totalPage) {
    const container = document.getElementById('wishlist-container');
    const pagination = document.getElementById('pagination');

    // Clear previous content
    container.innerHTML = '';
    pagination.innerHTML = '';

    // Check if the wishlist is empty
    if (wishlist.length === 0) {
        container.innerHTML = `
            <p class="empty" >Your wishlist is empty. <a href="/" class="text-primary">Shop now</a> to add items.</p>
        `;
        return; // Exit the function as there's nothing to render
    }

    // Render wishlist items
    wishlist.forEach(item => {
        const product = item.productId;
        const itemHTML = `
            <div class="wishlist-item">
                <button onclick="deleteFromWishlist(event,'${product._id}')" class="remove-btn">&times;</button>
                <img src="${product.Image[0]}" alt="${product.name}" class="product-img img-thumbnail">
                <div class="ms-3">
                    <h5 class="fw-bold">${product.name}</h5>
                    <p class="price text-dark mb-1">
                        <span style="color: rgb(247, 183, 10);">₹${item.finalPrice || product.salePrice}</span> 
                        <strike>₹${product.regularPrice}</strike>
                    </p>
                    <p>Status: ${product.Status || "Available"}</p>
                    <a href="/ProuctDetails?product=${product._id}" class="text-primary text-decoration-none">View More Details</a>
                    ${product.Status !== "Out of Stock" && product.quantity > 0
                        ? `<a onclick="addToCart('${product._id}')" ><i class="fas fa-cart-plus cart-icon"></i></a>`
                        : ''}
                </div>
            </div>
        `;
        container.innerHTML += itemHTML;
    });
    if (wishlist.length > 3) {
        // Previous button
        if (currentPage > 1) {
            pagination.innerHTML += `<a href="#" class="btn" onclick="fetchWishlist(${currentPage - 1})">Previous</a>`;
        } else {
            pagination.innerHTML += `<a class="btn disabled">Previous</a>`;
        }

        // Page numbers
        for (let i = 1; i <= totalPage; i++) {
            pagination.innerHTML += `
                <a href="#" 
                   class="btn ${currentPage === i ? 'btn-secondary' : ''}" 
                   onclick="fetchWishlist(${i})">${i}</a>`;
        }

        // Next button
        if (currentPage < totalPage) {
            pagination.innerHTML += `<a href="#" class="btn" onclick="fetchWishlist(${currentPage + 1})">Next</a>`;
        } else {
            pagination.innerHTML += `<a class="btn disabled">Next</a>`;
        }
    }
  
}



    function deleteFromWishlist(e, id) {
        e.preventDefault();

        Swal.fire({
            icon: "success",
            title: "Are You Sure?",
            confirmButtonText: "Yes",
            cancelButtonText: "No",
            showConfirmButton: true,
            showCancelButton: true
        }).then((result) => {
            if (result.isConfirmed) {
                fetch("/delete-from-whishlist", {
                    method: "POST",
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id })
                })
                .then(response => response.json())
                .then(response => {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Removed",
                            timer: 1500,
                            showConfirmButton: false
                        })
                        fetchWishlist(1);
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Failed To Remove",
                            timer: 1500,
                            showConfirmButton: false
                        });
                    }
                })
                .catch(() => {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        timer: 1500,
                        showConfirmButton: false
                    });
                });
            }
        });

        return false;
    }
</script>
