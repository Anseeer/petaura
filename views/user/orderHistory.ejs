    <div class="content">
        <!-- Pending Orders Section -->
         <% if(pending && pending.length > 0){ %>
        <div class="p-4 shadow-lg rounded bg-white mb-4">
            <h3 class="mb-4 text-center text-uppercase text-dark">Pending Orders</h3>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Product</th>
                        <th> Discount</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% pending.forEach((pending)=>{ %>
                        <% pending.orderedItems.forEach(item => { %>

                        <tr>
                            <td  onclick="location.href='/user/pending-order-details?productId=<%= item.product._id %>&orderId=<%= pending.orderId %>&orderedItemsId=<%= item._id %>'">
                                <img src="<%= item.product.Image[0] %>" alt="Product Image" class="product-image" style="width: 50px; height: auto; margin-right: 10px;">
                                <%= item.name %>
                            </td>
                            <td><%= item.coupenDiscount || 0 %></td>
                        <td>₹<%= item.totalPrice.toFixed(2) %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.status %></td>
                            <td>
                                <button class="btn btn-success btn-sm" onclick="rePayment(event,'<%= pending.razorPayOrderId %>')" >Retry</button>
                            </td>
                        </tr>
                   <% }) %>
                   <% }) %>
                 
                </tbody>
            </table>
        </div>
        <% } %>
        <!-- Order History Section -->
        <div class="container mt-0 py-3 shadow-lg rounded bg-white">
            <h3 class="mb-4 text-center text-uppercase text-dark">Order History</h3>
            <% if (orders && orders.length > 0) { %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>OrderId</th>
                        <th>Items</th>
                        <th>Date</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                      <tr onclick="window.location.href='/user/order-details?orderId=<%= order.orderId %>'">
                        <td><%= order.orderId %></td>
                        <td>(<%= order.orderedItems.length %>)</td>
                        <td><%= order.createdAT.toLocaleDateString("en-GB") %></td>
                        <td>₹<%= order.finalPrice.toFixed(2) %></td>
                        <td><%= order.status %></td>
                        <td>
                          <% if (order.status === "delivered") { %>
                            <button class="btn btn-warning btn-sm btn-custom">Return request in 14 days</button>
                          <% } else if (order.status === "pending") { %>
                            <button class="btn btn-danger btn-sm btn-custom" onclick="event.stopPropagation(); orderCancel(event,'<%= order.orderId %>')">Cancel Order</button>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                  
            </table>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="/user/orderHistory?page=<%= currentPage - 1 %>" class="btn">Previous</a>
                <% } else { %>
                    <a class="btn disabled">Previous</a>
                <% } %>
            
                <% for (let i = 1; i <= totalPage; i++) { %>
                    <a href="/user/orderHistory?page=<%= i %>" 
                       class="btn <%= currentPage === i ? 'btn-secondary' : '' %>">
                       <%= i %>
                    </a>
                <% } %>
            
                <% if (currentPage < totalPage) { %>
                    <a href="/user/orderHistory?page=<%= currentPage + 1 %>" class="btn">Next</a>
                <% } else { %>
                    <a class="btn disabled">Next</a>
                <% } %>
            </div>
            
    
            <% } else { %>
            <div class="no-orders text-center">
                <h3>Your order history is empty!</h3>
                <p>It seems like you haven’t placed any orders yet.</p>
                <a href="/user/" class="btn btn-primary">Start Shopping</a>
            </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
