<div aria-label="breadcrumb">
  <ol class="breadcrumb">
    <% breadcrumbs.forEach((crumb, index) => { %>
      <% if (index === breadcrumbs.length - 1) { %>
        <!-- Last breadcrumb -->
        <li class="breadcrumb-item active" aria-current="page"><%= crumb.text %></li>
      <% } else { %>
        <!-- Other breadcrumbs -->
        <li class="breadcrumb-item">
          <a href="<%= crumb.url %>"><%= crumb.text %></a>
        </li>
      <% } %>
    <% }); %>
  </ol>
</div>

<div class="container-fluid">
  <div class="row">
    <!-- Category Sidebar -->
    <div class="col-md-3">
      <div class="Ccategory-sidebar bg-light p-4 shadow rounded">
        <h5 class="fw-bold mb-3">Cat Categories:</h5>
        <ul class="list-unstyled">
          <li><a href="/user/cat-supplies" class="text-decoration-none text-dark py-2 d-block">All Products</a></li>
          <% for(let i=0 ; i < category.length ; i++){%>
          <li><a href="/user/fillterCategoryOfCat?category=<%=category[i]._id%>" class="text-decoration-none text-dark py-2 d-block"><%=category[i].name%></a></li>
          <%}%>
        </ul>
