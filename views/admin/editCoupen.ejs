<%- include("../partials/admin/header.ejs") %> 

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
  body {
    background-color: #f8f9fa;
  }
  .form-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    background-color: #ffffff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
  }
  .form-title {
    text-align: center;
    margin-bottom: 20px;
  }
  .error {
    color: red;
  }
</style>

<body>
  <div class="container">
    <div class="form-container">
      <h2 class="form-title">Edit Coupon</h2>
      <form id="addCouponForm" onsubmit="return editCoupon(event)" method="post">
        <div class="row">
          <!-- Left Column -->
          <div class="col-md-6">
            <!-- Coupon Code -->
            <div class="mb-3">
              <label for="couponCode" class="form-label">Coupon Code</label>
              <input type="text" class="form-control" value="<%= coupen.code %>" id="couponCode" name="couponCode" placeholder="Enter unique coupon code">
              <div class="error" id="err1"></div>
            </div>

            <!-- Start Date -->
            <div class="mb-3">
              <label for="startDate" class="form-label">Start Date</label>
              <input type="date" class="form-control"  id="startDate" name="startDate">
              <div class="error" id="err2"></div>
            </div>

            <!-- End Date -->
            <div class="mb-3">
              <label for="endDate" class="form-label">End Date</label>
              <input type="date" class="form-control"   id="endDate" name="endDate">
              <div class="error" id="err3"></div>
            </div>

            <!-- Discount Amount -->
            <div class="mb-3">
              <label for="discountPercentage" class="form-label">Discount</label>
              <input type="number" class="form-control"  value="<%= coupen.discountPercentage %>" id="discountPercentage" name="discountPercentage" placeholder="Enter discount%">
              <div class="error" id="err4"></div>
            </div>

          </div>

          <!-- Right Column -->
          <div class="col-md-6">

            <!-- Minimum Order Value -->
            <div class="mb-3">
              <label for="minOrderValue" class="form-label">Minimum Order Value</label>
              <input type="number" class="form-control"  value="<%= coupen.minOrderValue %>" id="minOrderValue" name="minOrderValue" placeholder="Enter minimum order value">
              <div class="error" id="err5"></div>
            </div>

            <!-- Maximum Discount -->
            <div class="mb-3">
              <label for="maxDiscount" class="form-label">Maximum Discount</label>
              <input type="number" class="form-control"  value="<%= coupen.maxDiscount %>" id="maxDiscount" name="maxDiscount" placeholder="Enter maximum discount">
              <div class="error" id="err6"></div>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="couponDescription" class="form-label">Description</label>
              <input class="form-control" id="couponDescription" value="<%= coupen.description %>" name="description" rows="3" placeholder="Enter coupon description">
              <div class="error" id="err7"></div>
            </div>

            <!-- Usage Limit -->
            <div class="mb-3">
              <label for="usageLimit" class="form-label">Usage Limit</label>
              <input type="number" class="form-control" id="usageLimit" value="<%= coupen.usageLimit %>" name="usageLimit" placeholder="Enter usage limit">
              <div class="error" id="err8"></div>
            </div>
          </div>
        </div>

        <input type="hidden" id="couponId" value="<%= coupen._id %>">

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Edit Coupon</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/scripts/admin/editCoupen.js" ></script>
</body>

<%- include("../partials/admin/footer.ejs") %>
