<%- include("../partials/admin/header.ejs") %>
<style>
  #salesReportTable {
  border-collapse: collapse;
  width: 100%;
  text-align: center;
  vertical-align: middle;
}

#salesReportTable th, #salesReportTable td {
  padding: 10px;
  border: 1px solid #ddd;
}

thead.thead-dark th {
  background-color: #343a40;
  color: white;
}

</style>
<div class="container mt-5">
  <h2 class="text-center mb-4">Sales Report</h2>

<div class="row g-3 mb-3">
  <!-- Select Range -->
  <div class="col-md-6">
    <label for="date" class="form-label fw-bold">Select Range</label>
    <select onchange="filterSalesReport()" class="form-select" name="day" id="date">
      <option value="week">week</option>
      <option value="month">month</option>
      <option value="year">year</option>
      <option value="custom">custom</option>
    </select>
  </div>
  <!-- Filter -->
  <div class="col-md-6">
    <label for="filter" class="form-label fw-bold">Filter</label>
    <select onchange="filterSalesReport()" class="form-select" name="filter" id="filter">
      <option value="delivered">delivered</option>
      <option value="canceled">canceled</option>
      <option value="approved">returned</option>
    </select>
  </div>
</div>
<div id="dateRangeContainer" class="row g-3 mt-3 mb-3" style="display: none;">
  <div class="col-md-6">
    <label for="startDate" class="form-label fw-bold">Start Date</label>
    <input type="date" onchange="filterSalesReport()" class="form-control" id="startDate" name="startDate" />
  </div>
  <div class="col-md-6">
    <label for="endDate" class="form-label fw-bold">End Date</label>
    <input type="date" onchange="filterSalesReport()" class="form-control" id="endDate" name="endDate" />
  </div>
</div>

  
  <!-- Custom Date Range Section -->
  <div class="table-responsive">
      <table id="salesReportTable" class="table table-striped table-bordered">
        
        <button class="btn-primary">Download PDF</button>
        <button class="btn-secondary ">Download Excel</button>
      </table>
 
  </div>
  
  <!-- Include jsPDF and jsPDF AutoTable libraries -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
  
  <script src="/scripts/admin/salesReport.js" ></script>
<%- include("../partials/admin/footer.ejs") %>
