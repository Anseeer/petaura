  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .header {
      background-color: #ffa500; /* Matching orange color */
      padding: 10px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: fixed;
      width: 100%;
      z-index: 10;
    }

    .header .logo {
      font-size: 24px;
      font-weight: bold;
      color: black;
    }

    .header .search-bar {
      flex: 1;
      margin: 0 20px;
      display: flex;
      justify-content: center;
    }

    .header .search-bar input {
      width: 50%;
      border: 1px solid #ccc;
      border-radius: 20px;
      padding: 5px 15px;
      outline: none;
    }

    .header .search-bar input:focus {
      border-color: black;
    }

    .header .icon {
      font-size: 24px;
      color: black;
      cursor: pointer;
    }

    .side-nav {
      position: fixed;
      top: 60px; /* Start below the header */
      left: 0;
      width: 240px; /* Set a fixed width for the side nav */
      height: calc(100% - 60px);
      background-color: #f8f9fa;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      padding-top: 10px; /* Reduced empty space */
      overflow-y: auto; /* Make side-nav scrollable if content exceeds */
    }

    .side-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .side-nav ul li {
      display: flex;
      align-items: center;
      padding: 10px 15px;
      cursor: pointer;
    }

    .side-nav ul li a {
      text-decoration: none;
      color: #000;
      font-weight: bold;
      display: flex;
      align-items: center;
      width: 100%; /* Ensure entire portion is clickable */
    }

    .side-nav ul li a:hover {
      background-color: #ddd;
      border-radius: 4px;
    }

    .side-nav ul li i {
      margin-right: 10px; /* Space between icon and text */
    }

    /* Active Link Styling */
    .side-nav ul li a.active {
      background-color: #bdbdbd; /* Highlight active item with the same orange as the header */
      color: white; /* Change text color to white when active */
    }

    /* Content container to ensure no overlap with header and side-nav */
    .content {
      margin-left: 240px; /* Ensure content does not overlap with side-nav */
      padding: 20px;
      padding-top: 80px; /* Push content down to not overlap with the fixed header */
    }
    /*  */
    .sidebar {
    height: 100vh;
    background-color: #ffa500;
    color: white;
    width: 250px;
    padding: 0;
    /* margin-top: 100px; */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.493);
}

.sidebar a {
    display: flex;
    align-items: center;
    color: black;
    padding: 10px 20px;
    text-decoration: none;
    transition: 0.3s;
}

.sidebar a:hover,
.sidebar a.active {
    color: white;
    background-color: #a8a295;
}


